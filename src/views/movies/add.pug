extends ../layouts/main.pug
block scripts
block content
    #container.col
      h2 Add movie
      form(method="post" action="/movies/add")
        div.form-group
          label Title
          input.form-control(type="text" name="title" placeholder="Title" maxlength="30")
        div.form-group
          label Year
          input.form-control(type="text" name="year" placeholder="Year" maxlength="4")
        div.form-group
          label Language
          select.form-control(name="languageid")
            each language in languages
              option(value=language.code) #{language.name}
        div.form-group
          label Imdb ID
          div.input-group
            div.input-group-addon https://imdb.com/title/
            input.form-control(type="text" name="imdbid" placeholder="Imdb ID" maxlength="10" value=form.imdbId != undefined ? form.imdbId : "")
          if messages.imdb != undefined
            div.alert.alert-warning= messages.imdb
        div.form-group
          button.btn.btn-primary Add
